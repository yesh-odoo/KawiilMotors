<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_inherited" model="ir.ui.view">
        <field name="name">product.template.form.inherited</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Motorcycle Information" attrs="{'invisible': [('type', '!=', 'product'), ('detailed_type', '!=', 'motorcycle')]}">
                <group>
                    <field name="horsepower"/>
                    <field name="top_speed"/>
                    <field name="torque"/>
                    <field name="battery_capacity"/>
                    <field name="charge_time"/>
                    <field name="range"/>
                    <field name="curb_weight"/>
                    <field name="make"/>
                    <field name="model"/>
                    <field name="year"/>
                </group>
            </page>
        </notebook>
        </field>
    </record>
</odoo>
